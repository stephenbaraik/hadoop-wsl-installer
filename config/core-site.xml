<!-- Hadoop Core Configuration for WSL -->
<configuration>
    <!-- Default file system URI -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://localhost:9000</value>
        <description>The default file system URI</description>
    </property>
    
    <!-- Hadoop temporary directory -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/opt/hadoop/data/tmp</value>
        <description>Base for other temporary directories</description>
    </property>
    
    <!-- Proxy user configuration for web interfaces -->
    <property>
        <name>hadoop.proxyuser.root.hosts</name>
        <value>*</value>
    </property>
    
    <property>
        <name>hadoop.proxyuser.root.groups</name>
        <value>*</value>
    </property>
    
    <!-- HTTP policy configuration -->
    <property>
        <name>hadoop.http.policy</name>
        <value>HTTP_ONLY</value>
    </property>
    
    <!-- Web authentication configuration -->
    <property>
        <name>hadoop.http.authentication.type</name>
        <value>simple</value>
    </property>
    
    <!-- Enable web UIs -->
    <property>
        <name>hadoop.http.staticuser.user</name>
        <value>hadoop</value>
    </property>
    
    <!-- IO settings optimized for WSL -->
    <property>
        <name>io.file.buffer.size</name>
        <value>131072</value>
        <description>Size of read/write buffer used in SequenceFiles</description>
    </property>
    
    <!-- Native library path -->
    <property>
        <name>hadoop.native.lib</name>
        <value>true</value>
        <description>Should native hadoop libraries, if present, be used</description>
    </property>
    
    <!-- Compression settings -->
    <property>
        <name>io.compression.codecs</name>
        <value>org.apache.hadoop.io.compress.DefaultCodec,org.apache.hadoop.io.compress.GzipCodec,org.apache.hadoop.io.compress.BZip2Codec,org.apache.hadoop.io.compress.Lz4Codec</value>
    </property>
    
    <!-- Security settings for pseudo-distributed mode -->
    <property>
        <name>hadoop.security.authentication</name>
        <value>simple</value>
    </property>
    
    <property>
        <name>hadoop.security.authorization</name>
        <value>false</value>
    </property>
</configuration>