<!-- HDFS Configuration for WSL -->
<configuration>
    <!-- Replication factor for pseudo-distributed mode -->
    <property>
        <n>dfs.replication</n>
        <value>1</value>
        <description>Default block replication</description>
    </property>
    
    <!-- NameNode data directory -->
    <property>
        <n>dfs.namenode.name.dir</n>
        <value>file:///opt/hadoop/data/namenode</value>
        <description>Path on the local filesystem where the NameNode stores the namespace and transaction logs</description>
    </property>
    
    <!-- DataNode data directory -->
    <property>
        <n>dfs.datanode.data.dir</n>
        <value>file:///opt/hadoop/data/datanode</value>
        <description>Comma separated list of paths on the local filesystem where DataNode stores its blocks</description>
    </property>
    
    <!-- NameNode Web UI configuration -->
    <property>
        <n>dfs.namenode.http-address</n>
        <value>0.0.0.0:9870</value>
        <description>The address and port the NameNode web ui should bind to</description>
    </property>
    
    <!-- Secondary NameNode Web UI -->
    <property>
        <n>dfs.namenode.secondary.http-address</n>
        <value>0.0.0.0:9868</value>
        <description>The secondary namenode http server address and port</description>
    </property>
    
    <!-- DataNode Web UI -->
    <property>
        <n>dfs.datanode.http.address</n>
        <value>0.0.0.0:9864</value>
        <description>The datanode http server address and port</description>
    </property>
    
    <!-- DataNode IPC address -->
    <property>
        <n>dfs.datanode.address</n>
        <value>0.0.0.0:9866</value>
        <description>The datanode server address and port for data transfer</description>
    </property>
    
    <!-- DataNode IPC address -->
    <property>
        <n>dfs.datanode.ipc.address</n>
        <value>0.0.0.0:9867</value>
        <description>The datanode ipc server address and port</description>
    </property>
    
    <!-- Block size (128MB) -->
    <property>
        <n>dfs.blocksize</n>
        <value>134217728</value>
        <description>The default block size for new files, in bytes</description>
    </property>
    
    <!-- Permissions settings for WSL -->
    <property>
        <n>dfs.permissions.enabled</n>
        <value>false</value>
        <description>If true, enable permission checking in HDFS</description>
    </property>
    
    <!-- WebHDFS enabled -->
    <property>
        <n>dfs.webhdfs.enabled</n>
        <value>true</value>
        <description>Enable WebHDFS (REST API) in Namenodes and Datanodes</description>
    </property>
    
    <!-- Safe mode settings -->
    <property>
        <n>dfs.namenode.safemode.threshold-pct</n>
        <value>0.9f</value>
        <description>Specifies the percentage of blocks that should satisfy the minimal replication requirement</description>
    </property>
    
    <!-- Heartbeat settings -->
    <property>
        <n>dfs.heartbeat.interval</n>
        <value>3</value>
        <description>Determines datanode heartbeat interval in seconds</description>
    </property>
    
    <!-- Client settings -->
    <property>
        <n>dfs.client.use.datanode.hostname</n>
        <value>false</value>
        <description>Whether clients should use datanode hostnames when connecting to datanodes</description>
    </property>
    
    <!-- Namenode checkpoint settings -->
    <property>
        <n>dfs.namenode.checkpoint.period</n>
        <value>3600</value>
        <description>The number of seconds between two periodic checkpoints</description>
    </property>
    
    <!-- Trash settings -->
    <property>
        <n>fs.trash.interval</n>
        <value>1440</value>
        <description>Number of minutes after which the checkpoint gets deleted</description>
    </property>
</configuration>